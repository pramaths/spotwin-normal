{
  "build": {
    "base": {
      "node": "18.18.0",
      "yarn": "1.22.19",
      "env": {
        "APP_ENV": "base"
      },
      "android": {
        "image": "ubuntu-22.04-jdk-17-ndk-r21e",
        "env": {
          "PLATFORM": "android"
        }
      }
    },
    "development": {
      "extends": "base",
      "developmentClient": true,
      "env": {
        "APP_ENV": "development"
      },
      "android": {
        "buildType": "apk",
        "distribution": "internal"
      }
    },
    "preview": {
      "extends": "base",
      "distribution": "internal",
      "android": {
        "buildType": "apk"
      },
      "env": {
        "APP_ENV": "preview"
      }
    },
    "production": {
      "extends": "base",
      "android": {
        "buildType": "app-bundle"
      },
      "env": {
        "APP_ENV": "production"
      }
    }
  },
  "submit": {
    "production": {
      "android": {
        "serviceAccountKeyPath": "./playstore.json",
        "track": "internal"
      }
    }
  }
}
